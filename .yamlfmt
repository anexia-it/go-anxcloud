formatter:
  type: basic
  indent: 2
  include_document_start: false
  line_ending: lf
  retain_line_breaks: false
  retain_line_breaks_single: false
  disallow_anchors: true
  max_line_length: 0
  indentless_arrays: false
  drop_merge_tag: false
  pad_line_comments: 2
  trim_trailing_whitespace: true
  eof_newline: true